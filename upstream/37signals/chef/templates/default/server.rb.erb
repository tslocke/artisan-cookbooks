log_level          :info
log_location       "/var/log/chef/server.log"
ssl_verify_mode    :verify_none
registration_url   "https://chef.<%= @node[:domain]%>"
openid_url         "https://chef.<%= @node[:domain]%>"
template_url       "https://chef.<%= @node[:domain]%>"
remotefile_url     "https://chef.<%= @node[:domain]%>"
search_url         "https://chef.<%= @node[:domain]%>"

validation_token   "<%= @node[:chef][:validation_token]%>"

cookbook_path      [ "/var/chef/site-cookbooks", "/var/chef/cookbooks" ]

file_store_path    "/var/chef/file_store"
file_cache_path    "/var/chef/cache"
node_path          "/var/chef/nodes"
openid_store_path  "/var/chef/openid/store"
openid_cstore_path "/var/chef/openid/cstore"
search_index_path  "/var/chef/search_index"

openid_providers   [ "https://chef.<%= @node[:domain]%>", "https://chef", "calx.es", "imbriaco.com" ]
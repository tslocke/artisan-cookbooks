PassengerRoot <%= @node[:passenger][:root_path] %>
PassengerRuby <%= @node[:passenger][:tune_gc]  ? "/usr/local/bin/ruby_gc_wrapper" : @node[:languages][:ruby][:ruby_bin] %>
<% if @node[:passenger].has_key?(:max_pool_size) %>PassengerMaxPoolSize <%= @node[:passenger][:max_pool_size] %><% end %>
<% if @node[:passenger].has_key?(:max_instances_per_app) %>PassengerMaxInstancesPerApp <%= @node[:passenger][:max_instances_per_app] %><% end %>
<% if @node[:passenger].has_key?(:use_global_queue) %>PassengerUseGlobalQueue <%= @node[:passenger][:use_global_queue] %><% end %>
<% if @node[:passenger].has_key?(:rails_env) %>RailsEnv <%= @node[:passenger][:rails_env] %><% end %>

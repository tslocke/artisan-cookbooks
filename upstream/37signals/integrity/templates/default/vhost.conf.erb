<VirtualHost *:80>
  ServerName   <%= @node[:integrity][:server_name] %>
  DocumentRoot <%= @node[:integrity][:path] %>/public
  ErrorLog     <%= @node[:integrity][:path] %>/log/error.log
  CustomLog    <%= @node[:integrity][:path] %>/log/access.log combined

  <Directory "<%= @node[:integrity][:path] %>/public">
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>  
</VirtualHost>